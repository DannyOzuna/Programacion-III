@page "/"
@inject IRepositorioRobos RepositorioRobos

<div class="row justify-content-center">
    <div class="col-10 text-center">
        <h1 class="alert alert-info">Listado de Robos</h1>
    </div>
</div>

<table class="table table-striped"> 
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Cedula</th>
            <th>Fecha</th>
            <th>Informaci√≥n</th>
            <th>valor</th>
            <th>lugar</th>
            <th>Latitud</th>
            <th>Longitud</th>
        </tr>
    </thead>
    <tbody>
        @if(lsRobos != null){
            @foreach (var item in lsRobos)
            {
                <tr>
                    <td>@item.nombre</td>
                    <td>@item.cedula</td>
                    <td>@item.fecha</td>
                    <td>@item.info_robo</td>
                    <td>@item.valor</td>
                    <td>@item.lugar</td>
                    <td>@item.latitud</td>
                    <td>@item.longitud</td>
                </tr>
            }
        }
    </tbody>
</table>


@code {
    List<Tb_robos> lsRobos = new List<Tb_robos>();
    
    protected override async Task OnInitializedAsync()
    {
        lsRobos = await RepositorioRobos.GetTb_Robos();
    }
}