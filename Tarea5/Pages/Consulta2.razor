@page "/consulta2"
@using Models.DB

<div class="row justify-content-center">
    <div class="col-8 alert alert-info text-center">
      <h1>Ejercicio 2</h1>
      <p>Los 5 Productos mas caros</p>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Producto</th>
            <th>Costo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in GetProducts().Take(5))
        {
            <tr>
                <td>@producto.Id</td>
                <td>@producto.ProductName</td>
                <td>@producto.StandardCost</td>
            </tr>
        }
    </tbody>
</table>

@code{
    List<Product> GetProducts() => (from p in new northwindContext().Products
                                        orderby p.StandardCost descending
                                        select p).ToList(); 
}