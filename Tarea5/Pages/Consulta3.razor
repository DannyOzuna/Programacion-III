@page "/consulta3"
@using Models.DB
@using System;

<div class="row justify-content-center">
    <div class="col-8 alert alert-info text-center">
      <h1>Ejercicio 3</h1>
      <p>La cantidad de clientes que existen por pais</p>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td>City</td>
            <td>Cantidad</td>
        </tr>
    </thead>
    <tbody>
            @foreach (var empleado in GetConsulta3())
            {
                <tr>
                    <td>@empleado.name</td>
                    <td>@empleado.count</td>
                </tr>
            }
    </tbody>
</table>

@code {
    List<DataConsulta3> GetConsulta3() => (from e in new northwindContext().Employees
                                            group e by e.City  into r
                                            select new DataConsulta3{
                                                name = r.Key, 
                                                count = r.Count()
                                            }).ToList();
}