@page "/consulta1"
@using Models.DB

<div class="row justify-content-center">
    <div class="col-8 alert alert-info text-center">
      <h1>Ejercicio 1</h1>
      <p>Listado de los empleados, nombre, apellido y Telefono</p>
    </div>
</div>

@* <div class="form-inline">
    <label class="sr-only" for="nombre-filtro">Filtrar</label>
    <input type="text" class="form-control mb-2 mr-sm-2" @bind="PersonaFiltro" placeholder="Filrar por Nombre">
</div> *@

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            @* <th>Nombre</th> *@
            <BuscarColumna nombreColumna="Nombre" buscarText="buscarTextx"></BuscarColumna>
            <th>Apellido</th>
            <th>Telefono</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var empleado in GetEmployees())
        {
            <tr>
                <td>@empleado.Id</td>
                <td>@empleado.FirstName</td>
                <td>@empleado.LastName</td>
                <td>@empleado.HomePhone</td>
            </tr> 
        }
    </tbody>

</table>

@code{
    private string PersonaFiltro = "";
    public List<Employee> filtrar {get; set;}
    //public List<Employee> buscar {get; set;}
     List<Employee> GetEmployees() => (from d in new northwindContext().Employees
                                        select d).ToList();

    public void buscarTextx(ChangeEventArgs changeEventArgs){
        string buscarText = changeEventArgs.Value.ToString();
        GetEmployees().Where(e => e.FirstName.Contains(buscarText)).ToList();
    }

}